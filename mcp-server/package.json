{
  "name": "gekko-mcp-server",
  "version": "1.0.0",
  "description": "Model Context Protocol server for myGEKKO smart home integration",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:mcp": "ts-node --esm index.ts",
    "start:mcp": "node dist/index.js",
    "build:mcp": "tsc",
    "test:mcp": "ts-node --esm testMCP.ts",
    "mcp:stdio": "ts-node --esm index.ts --stdio",
    "mcp:http": "ts-node --esm index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "axios": "^1.7.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.14.10",
    "typescript": "^5.5.3",
    "ts-node": "^10.9.2"
  }
}